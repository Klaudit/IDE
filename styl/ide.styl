@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"

@css {
/*
IDE stylesheet
ide.styl
*/
}

.ide
  bg                    color, #1B2224
  .ace_editor
    height              100%


  .ide-files-tab
    .kdtabhandle
      b
        text-indent     -1000px
      &.files
        r-sprite        'ide', 'files-off'
        &.active
          r-sprite      'ide', 'files-on'
      &.vms
        r-sprite        'ide', 'vms-off'
        &.active
          r-sprite      'ide', 'vms-on'
      &.settings
        r-sprite        'ide', 'settings-off'
        &.active
          r-sprite      'ide', 'settings-on'
      &.actions
        r-sprite        'ide', 'share-off'
        &.active
          r-sprite      'ide', 'share-on'

.floating.kdsplitview-panel
  .ide-files-tab
    .application-tab-handle-holder
      size              39px, 100%
      fl()
    .kdtabhandle
      float             none
    .application-tabview
      top               0
      left              0
      margin-left       39px
      abs()
      fl()

.settings-pane
  line-height 20px

  .kdselectbox
    min-width 112px
    display block
    float right

  p
    color #D4CFC9
    font-size 14px
    padding 5px 20px
    clear both
    borderBox()

    &.with-select
      line-height 32px

    .settings-on-off
      display block
      float right

      &.on
        background-color #4EA04C
      &.off
        background-color #131313
