.ide
  bg                    color, #1B2224
  .ace_editor
    height              100%


  .ide-files-tab
    .kdtabhandle
      b
        text-indent     -1000px
      &.files
        r-sprite        'ide', 'files-off'
        &.active
          r-sprite      'ide', 'files-on'
      &.vms
        r-sprite        'ide', 'vms-off'
        &.active
          r-sprite      'ide', 'vms-on'
      &.actions
        r-sprite        'ide', 'share-off'
        &.active
          r-sprite      'ide', 'share-on'

.floating.kdsplitview-panel
  .ide-files-tab
    .application-tab-handle-holder
      size              39px, 100%
      fl()
    .kdtabhandle
      float             none
    .application-tabview
      top               0
      left              0
      margin-left       39px
      abs()
      fl()

